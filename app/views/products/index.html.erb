<%@products.each do |product|%>
<%=product.name%>
<%= truncate product.description%>
<%end%>

<script type="text/javascript" charset="utf-8">
$(function () {
  $(".js-more").on('click', function() {
    // get the id from the data attribute
    var id = $(this).data("id");
    $.get("/products/" + id + "/body", function(data) {
      alert(data);
    });
  });
});
</script>
